{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://pisa.watch/schemas/appointment-request.json",
    "type": "object",
    "title": "Appointment request schema",
    "required": [
        "challengePeriod",
        "contractAddress",
        "customerAddress",
        "customerSig",
        "data",
        "endBlock",
        "eventAddress",
        "gasLimit",
        "id",
        "nonce",
        "mode",
        "paymentHash",
        "preCondition",
        "postCondition",
        "refund",
        "startBlock",
        "topics"
    ],
    "additionalProperties": false,
    "properties": {
        "challengePeriod": {
            "$id": "#/properties/challengePeriod",
            "type": "integer",
            "minimum": 100,
            "maximum": 60000
        },
        "contractAddress": {
            "$id": "#/properties/contractAddress",
            "type": "string"
        },
        "customerAddress": {
            "$id": "#/properties/customerAddress",
            "type": "string"
        },
        "customerSig": {
            "$id": "#/properties/customerSig",
            "type": "string"
        },
        "data": {
            "$id": "#/properties/data",
            "type": "string"
        },
        "endBlock": {
            "$id": "#/properties/endBlock",
            "type": "integer",
            "minimum": 0,
            "maximum": 9007199254740991
        },
        "eventAddress": {
            "$id": "#/properties/eventAddress",
            "type": "string"
        },
        "gasLimit": {
            "$id": "#/properties/gasLimit",
            "type": "number",
            "minimum": 0,
            "maximum": 2000000
        },
        "id": {
            "$id": "#/properties/id",
            "type": "string"
        },
        "nonce": {
            "$id": "#/properties/nonce",
            "type": "integer",
            "minimum": 0,
            "maximum": 9007199254740991
        },
        "mode": {
            "$id": "#/properties/mode",
            "type": "integer",
            "minimum": 0,
            "maximum": 1
        },
        "paymentHash": {
            "$id": "#/properties/paymentHash",
            "type": "string"
        },
        "preCondition": {
            "$id": "#/properties/preCondition",
            "type": "string"
        },
        "postCondition": {
            "$id": "#/properties/postCondition",
            "type": "string"
        },
        "refund": {
            "$id": "#/properties/refund",
            "type": "string"
        },
        "startBlock": {
            "$id": "#/properties/startBlock",
            "type": "integer",
            "minimum": 0,
            "maximum": 9007199254740991
        },
        "topics": {
            "$id": "#/properties/topics",
            "type": "array",
            "maxItems": 4,
            "items": {
                "type": ["string",  "null"]
            }
        }
    }
}
