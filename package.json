{
    "name": "pisa",
    "private": true,
    "version": "0.1.9",
    "description": "Arbitration Outsourcing for State Channels",
    "main": "packages/server/lib/startUp.js",
    "scripts": {
        "bootstrap": "lerna bootstrap --hoist",
        "bootstrap-ci": "lerna bootstrap --ci",
        "bootstrap-ci-prod": "lerna bootstrap --ci -- --only=prod",
        "build": "lerna run build",
        "build-autominer": "cd build/raiden_demo/autominer && npm install && npm run build",
        "build-raiden-pisa-daemon": "cd build/raiden_demo/raiden-pisa-daemon && npm install && npm run build",
        "clean": "lerna clean && rm -rf node_modules",
        "lint": "eslint --ext ts .",
        "package-postpublish": "lerna exec \"npm i --package-lock-only\"",
        "package-publish": "lerna publish from-package",
        "package-publish-dev": "lerna publish from-package --dist-tag dev",
        "package-version": "lerna version --no-git-tag-version",
        "publish-dev": "lerna publish --dist-tag dev",
        "start-evm": "ganache-cli -d -l 15000000 --allowUnlimitedContractSize --defaultBalanceEther 1000000 --mnemonic 'myth like bonus scare over problem client lizard pioneer submit female collect'",
        "submodule": "git submodule init && git submodule update",
        "test": "npm run build && npm run test-endtoend",
        "test-alpha": "npm run build && NODE_ENV=test mocha -r ts-node/register test/smoke/alpha.test.ts --exit",
        "test-contract": "npm run build && cd packages/contracts && truffle test",
        "test-coverage": "lerna run test-coverage",
        "test-endtoend": "NODE_ENV=test mocha -r ts-node/register test/endtoend/**/*.test.ts --exit",
        "test-integration": "npm run build && mocha -r ts-node/register 'test/integration/remote/**/*.test.ts' --exit",
        "test-load": "npm run build && ts-node test/load/loadTest.ts 10 20000",
        "test-raiden": "npm run build && mocha -r ts-node/register 'test/integration/raiden.test.ts' --exit",
        "test-run-endtoend": "NODE_ENV=test mocha -r ts-node/register test/endtoend/**/*.test.ts --exit",
        "test-smoke": "ts-node test/smoke/smokeTests.ts"
    },
    "nyc": {
        "include": [
            "src/**/*.ts"
        ],
        "extension": [
            ".ts"
        ],
        "require": [
            "ts-node/register"
        ],
        "reporter": [
            "json-summary",
            "lcovonly"
        ],
        "sourceMap": true,
        "instrument": true
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/PISAresearch/pisa.git"
    },
    "author": "PISA Research",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/PISAresearch/pisa/issues"
    },
    "homepage": "https://github.com/PISAresearch/pisa#readme",
    "dependencies": {
        "@types/cors": "^2.8.6",
        "ajv": "^6.10.2",
        "better-ajv-errors": "^0.6.4",
        "cors": "^2.8.5",
        "encoding-down": "^6.0.2",
        "ethers": "^4.0.37",
        "express": "^4.16.4",
        "express-http-context": "^1.2.0",
        "leveldown": "^5.0.3",
        "levelup": "^4.0.1",
        "memdown": "^4.0.0",
        "request": "^2.88.0",
        "rwlock": "^5.0.0",
        "serve-favicon": "^2.5.0",
        "subleveldown": "^4.1.0",
        "uuid": "^3.3.2",
        "yargs": "^13.2.4"
    },
    "devDependencies": {
        "@istanbuljs/nyc-config-typescript": "^0.1.3",
        "@types/ajv": "^1.0.0",
        "@types/chai": "^4.1.6",
        "@types/chai-as-promised": "^7.1.0",
        "@types/cls-hooked": "^4.3.0",
        "@types/dockerode": "^2.5.16",
        "@types/encoding-down": "^5.0.0",
        "@types/express": "^4.16.0",
        "@types/fs-extra": "^5.0.5",
        "@types/ganache-core": "^2.1.1",
        "@types/leveldown": "^4.0.0",
        "@types/levelup": "^3.1.0",
        "@types/lolex": "^3.1.1",
        "@types/memdown": "^3.0.0",
        "@types/mocha": "^5.2.5",
        "@types/node": "^12.0.0",
        "@types/request-promise": "^4.1.42",
        "@types/rwlock": "^5.0.2",
        "@types/serve-favicon": "^2.2.31",
        "@types/sinon": "^7.0.11",
        "@types/tar": "^4.0.0",
        "@types/uuid": "^3.4.4",
        "@types/yargs": "^13.0.0",
        "@typescript-eslint/eslint-plugin": "^1.7.0",
        "@typescript-eslint/parser": "^1.7.0",
        "chai": "^4.2.0",
        "chai-as-promised": "^7.1.1",
        "dockerode": "^2.5.8",
        "eslint": "^5.16.0",
        "eslint-config-prettier": "^4.2.0",
        "eslint-plugin-prettier": "^3.0.1",
        "fs-extra": "^7.0.1",
        "ganache-core": "^2.8.0",
        "husky": "^3.0.5",
        "lerna": "^3.18.3",
        "lolex": "^4.0.1",
        "mocha": "^5.2.0",
        "mocha-junit-reporter": "^1.22.0",
        "nyc": "^13.3.0",
        "prettier": "^1.17.0",
        "request-promise": "^4.2.4",
        "sinon": "^7.3.1",
        "sinon-chai": "^3.3.0",
        "tar": "^4.4.8",
        "tree-kill": "^1.2.1",
        "ts-mockito": "^2.3.1",
        "ts-node": "^8.3.0",
        "typescript": "^3.6.3",
        "wait-port": "^0.2.2"
    }
}
